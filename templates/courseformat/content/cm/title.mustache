{{!
    @template core_courseformat/local/content/cm/title

    Displays a course module instance inside a course section.

    Example context (json):
    {
        "url": "#",
        "instancename": "Activity name",
        "uservisible": true,
        "icon": "../../../pix/help.svg",
        "pluginname": "File",
        "altname": "PDF file",
        "linkclasses": "",
        "textclasses": "",
        "purpose": "content",
        "modname": "resource"
    }
}}
{{#url}}
    <div class="activity-instance flex-column">
        <div class="activitytitle media {{textclasses}} modtype_{{modname}} position-relative align-self-start">
            <div class="img-element {{elementstate.icon}}">
                <div class="img-block activityiconcontainer {{purpose}} courseicon align-self-start mr-3" >
                    <img src="{{{icon}}}" class="activityicon " alt="{{{modname}}} icon">
                </div>
            </div>
            <div class="media-body align-self-center activity-element {{modcontentclass}}">
                <div class="activity-type {{elementstate.modname}}">
                    <p class="text-uppercase small text-capitalize " style="{{#moduletextcolor}} {{moduletextcolor}} {{/moduletextcolor}}">
                        {{{pluginname}}}
                    </p>
                </div>

                <div class="activityname cmname-block {{elementstate.title}}" >
                    {{#uservisible}}
                        <a href="{{url}}" class="{{linkclasses}} aalink stretched-link" onclick="{{{onclick}}}">
                            <span class="instancename" style="{{#moduletextcolor}} {{moduletextcolor}} {{/moduletextcolor}}">{{{instancename}}} {{{altname}}}</span>
                        </a>
                    {{/uservisible}}
                    {{^uservisible}}
                        <span class="instancename">
                            {{{instancename}}} {{{altname}}}
                        </span>
                    {{/uservisible}}
                </div>
            </div>
        </div>
    </div>
{{/url}}
