{{!
    @template format_designer/section_layout

    Displays the course module card layout

    Example context (json):
    {
        "reactionurl_dislike": "http://moodleurl/course/format/designer/renderer.php"
    }
}}
<li id="section-{{section.section}}"
    class="section section-type-{{sectiontype}} main clearfix {{sectionstyle}} {{#sectionrestrict}} restricted {{/sectionrestrict}} {{sectioncontainerlayout}}"
    role="region"
    aria-labelledby="sectionid-{{section.id}}-title"
    data-sectionid="{{section.section}}"
    data-id="{{section.id}}"
    data-sectionreturnid="{{sectionreturn}}"
    style="{{#sectiondesignwhole}} {{sectionbackgroundstyle}} {{/sectiondesignwhole}} {{#sectioncontainerwidth}} {{sectioncontainerwidth}} {{/sectioncontainerwidth}}">

    
    {{#bgoverlay}}
    {{#sectiondesignwhole}}
    <div class="bg-overlay" style="{{bgoverlay}}">
    </div>
    {{/sectiondesignwhole}}
    {{/bgoverlay}}

    <div class="left side">
        {{{leftcontent}}}
    </div>

    <div class="right side">
        {{{rightcontent}}}
        <div class="icon-loader-block"></div>
    </div>

    <div class="content {{sectioncontentlayout}}" style="{{#sectioncontentwidth}} {{sectioncontentwidth}} {{/sectioncontentwidth}}">
        {{$content}}

        {{/content}}
    </div>
</li>
