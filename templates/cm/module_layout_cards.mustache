{{!
    @template format_designer/cm/module_layout_cards

    Displays the course module card layout

    Example context (json):
    {
        "cmname": "<a class=\"aalink\" href=\"#\"><span class=\"instancename\">Assign example</span></a>",
        "hasname": "true",
        "id": 3,
        "module": "assign",
        "extraclasses": ""

    }
}}

<div class="activity-block designer">
    {{{movehtml}}}
    <div class="card card-list {{colorclass}}" data-action="go-to-url" data-url="{{cm.url}}" style="cursor: pointer">
        <div class="card-body">
            <div class="mod-indent-outer w-100">
                <div class="{{indentclasses}}"></div>
                <div>
                    {{#cmname}}
                        <div class="activityinstance">
                            <div class="activity-type">
                                <p>{{modtype}}</p>
                            </div>
                            {{{cmname}}}
                            {{{afterlink}}}
                        </div>
                    {{/cmname}}
                    {{{beforecontent}}}

                    {{#modcontent}}
                        <div class="mod-content">
                            {{{modcontent}}}
                        </div>
                    {{/modcontent}}

                    {{#cmcompletionhtml}}
                        <div class="completion-html-card">
                            {{{cmcompletionhtml}}}
                        </div>
                    {{/cmcompletionhtml}}

                    {{#modvisits}}
                    <div class="mod-visits-block">
                        <p>{{modvisits}}</p>
                    </div>
                    {{/modvisits}}

                    <div class="action-html-card">
                        {{{calltoactionhtml}}}
                    </div>
                    {{{aftercontent}}}
                </div>
            </div>
        </div>
        {{#modicons}}
            <div class="actions">
                {{{modicons}}}
            </div>
        {{/modicons}}
    </div>
</div>
