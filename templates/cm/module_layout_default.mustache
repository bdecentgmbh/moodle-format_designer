{{!
    @template format_designer/cm/module_layout_default

    Displays the course module card layout

    Example context (json):
    {
        "cmname": "<a class=\"aalink\" href=\"#\"><span class=\"instancename\">Assign example</span></a>",
        "hasname": "true",
        "id": 3,
        "module": "assign",
        "extraclasses": ""

    }
}}
<div class="activity-block designer">
    {{{movehtml}}}
    <div class="mod-indent-outer w-100">
        <div class="{{indentclasses}}"></div>
        <div>
            {{#cmname}}
                <div class="activityinstance">
                    {{{cmname}}}
                    {{{afterlink}}}
                </div>
            {{/cmname}}
            {{{beforecontent}}}

            <div class="center-reports-block">
                <div class="row h-100 pull-right">
                    <div class="col align-self-center">
                        {{{cmcompletionhtml}}}
                        {{#modvisits}}
                        <div class="mod-visits-block text-muted">
                            <p>{{modvisits}}</p>
                        </div>
                        {{/modvisits}}
                    </div>
                </div>
            </div>

            <div class="action-html-card">
                {{{calltoactionhtml}}}
            </div>

            {{#modicons}}
                <div class="actions">
                    {{{modicons}}}
                </div>
            {{/modicons}}

            {{{aftercontent}}}
        </div>
    </div>
</div>
