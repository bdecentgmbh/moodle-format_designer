{{!
    @template format_designer/cm/module_layout_default

    Displays the course module card layout

    Example context (json):
    {
        "cmname": "<a class=\"aalink\" href=\"#\"><span class=\"instancename\">Assign example</span></a>",
        "hasname": "true",
        "id": 3,
        "module": "assign",
        "extraclasses": "",
        "prostyle": "min-height:200px;"

    }
}}
{{! <div class="default-style" > }}
    <div class="activity-block designer" style="{{#prostyle}} {{{prostyle}}} {{/prostyle}} ">
        <div class="activity-background-style" style="{{#modulebackgroundstyle}} {{modulebackgroundstyle}} {{/modulebackgroundstyle}}">
        </div>
        {{#modbackoverlaycolor}}
        <div class="bg-overlay" style="{{modbackoverlaycolor}}"></div>
        {{/modbackoverlaycolor}}
        {{{movehtml}}}
        <div class="mod-indent-outer w-100">
            <div class="{{indentclasses}}"></div>
            <div>
                <div class="activityinstance {{modcontentclass}}">
                    {{#modiconurl}}
                        <div class="img-element {{elementstate.icon}}">
                            <div class="img-block">
                                {{{modiconurl}}}
                            </div>
                        </div>
                    {{/modiconurl}}
                    <div class="activity-element {{modcontentclass}}">
                        <div class="activity-type {{elementstate.modname}}">
                            <p class="text-capitalize" style="{{#moduletextcolor}} {{moduletextcolor}} {{/moduletextcolor}}">{{modtype}}</p>
                        </div>
                        <div class="cmname-block {{elementstate.title}}">
                            {{#cmname}}
                                {{{cmname}}}
                            {{/cmname}}
                        </div>
                    </div>
                    {{{afterlink}}}
                </div>

                {{#modrestricted}}
                    <div class="availability-info {{elementstate.calltoaction}}">
                        {{{calltoactionhtml}}}
                    </div>
                {{/modrestricted}}
                {{{beforecontent}}}

                <div class="center-reports-block">
                    <div class="row h-100 pull-right">
                        <div class="col align-self-center">
                            {{#modvisits}}
                            <div class="mod-visits-block {{elementstate.visits}} text-muted">
                                <p class="text-capitalize" style="{{#moduletextcolor}} {{moduletextcolor}} {{/moduletextcolor}}">{{modvisits}}</p>
                            </div>
                            {{/modvisits}}
                            {{#cmcompletionhtml}}
                                <div class="completion-html-card {{elementstate.completionbadge}}">
                                    {{{cmcompletionhtml}}}
                                </div>
                            {{/cmcompletionhtml}}
                        </div>
                    </div>
                </div>

                {{#modcontent}}
                    <div class="mod-content" style="{{#moduletextcolor}} {{moduletextcolor}} {{/moduletextcolor}}">
                        {{{modcontent}}}
                    </div>
                {{/modcontent}}

                {{^modrestricted}}
                    <div class="action-html-card {{elementstate.calltoaction}}">
                        {{{calltoactionhtml}}}
                    </div>
                {{/modrestricted}}

                {{#modicons}}
                    <div class="actions">
                        {{{modicons}}}
                    </div>
                {{/modicons}}

                {{{aftercontent}}}
            </div>
        </div>
    </div>
{{! </div> }}
