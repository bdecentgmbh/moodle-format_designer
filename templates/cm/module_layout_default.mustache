{{!
    @template format_designer/cm/module_layout_default

    Displays the course module card layout

    Example context (json):
    {
        "cmname": "<a class=\"aalink\" href=\"#\"><span class=\"instancename\">Assign example</span></a>",
        "hasname": "true",
        "id": 3,
        "module": "assign",
        "extraclasses": "",
        "prostyle": "min-height:200px;"

    }
}}

<li class="{{modclasses}} {{#isrestricted}}restricted{{/isrestricted}}" 
    id="{{anchor}}"
    data-for="cmitem"
    data-id="{{cm.id}}">

{{#cmformat.moveicon}} {{{cmformat.moveicon}}} {{/cmformat.moveicon}}
<div class="activity-block activity-basis designer activity-item {{#modstealth}}hiddenactivity{{/modstealth}}{{!
        }}{{#modhiddenfromstudents}}hiddenactivity{{/modhiddenfromstudents}}{{!
        }}{{#modinline}}activityinline{{/modinline}}" 
        data-activityname="{{activityname}}" 
        style="{{#prostyle}} {{{prostyle}}} {{/prostyle}} ">
    <div class="activity-background-style" style="{{#modulebackgroundstyle}} {{modulebackgroundstyle}} {{/modulebackgroundstyle}}">
    </div>
    {{#modbackoverlaycolor}}
    <div class="bg-overlay" style="{{modbackoverlaycolor}}"></div>
    {{/modbackoverlaycolor}}
    {{{movehtml}}}
    <div class="mod-indent-outer w-100">
        <div class="{{indentclasses}}"></div>
        <div>
            <div class="activityinstance {{modcontentclass}}">
                {{#cmformat.cmname}}
                    {{$ core/inplace_editable }}
                        {{> core/inplace_editable }}
                    {{/ core/inplace_editable }}
                {{/cmformat.cmname}}
                {{#afterlink}}
                    <div class="afterlink">
                        {{{afterlink}}}
                    </div>
                {{/afterlink}}
            </div>

           {{! Module restricttions }}
            {{#modrestricted}}
            <div class="availability-info {{elementstate.calltoaction}}">
                {{#cmformat.modavailability}}
                    <div class='restrict-block'>
                        <div class='info-content-block'>
                        {{$ core_courseformat/local/content/cm/availability }}
                            {{> core_courseformat/local/content/cm/availability }}
                        {{/ core_courseformat/local/content/cm/availability }}
                        <div class='call-action-block'>
                        {{{calltoactionhtml}}}
                        </div>
                    </div>
                </div>
                {{/cmformat.modavailability}}
            </div>
            {{/modrestricted}}

            {{{beforecontent}}}

            <div class="center-reports-block">
                <div class="row h-100 pull-right">
                    <div class="col align-self-center">
                        {{#modvisits}}
                        <div class="mod-visits-block {{elementstate.visits}} text-muted">
                            <p class="text-capitalize" style="{{#moduletextcolor}} {{moduletextcolor}} {{/moduletextcolor}}">{{modvisits}}</p>
                        </div>
                        {{/modvisits}}
                        {{#cmcompletionhtml}}
                        <div class="completion-html-card {{elementstate.completionbadge}}">
                            {{{cmcompletionhtml}}}
                        </div>
                        {{/cmcompletionhtml}}
                    </div>
                </div>
            </div>

            {{#modcontent}}
                <div class="mod-content {{elementstate.description}}" style="{{#moduletextcolor}} {{moduletextcolor}} {{/moduletextcolor}}">
                    {{{modcontent}}}
                </div>
            {{/modcontent}}

            {{^modrestricted}}
                <div class="action-html-card {{elementstate.calltoaction}}">
                    {{{calltoactionhtml}}}
                </div>
            {{/modrestricted}}

            {{#cmformat.controlmenu}}
            <div class="activity-actions align-self-start">
                {{$ core_courseformat/local/content/cm/controlmenu }}
                    {{> core_courseformat/local/content/cm/controlmenu }}
                {{/ core_courseformat/local/content/cm/controlmenu }}
            </div>
            {{/cmformat.controlmenu}}

            {{{aftercontent}}}
        </div>
    </div>
</div>
</li>

