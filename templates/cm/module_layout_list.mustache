{{!
    @template format_designer/cm/module_layout_cards

    Displays the course module card list

    Example context (json):
    {
        "cmname": "<a class=\"aalink\" href=\"#\"><span class=\"instancename\">Assign example</span></a>",
        "hasname": "true",
        "id": 3,
        "module": "assign",
        "extraclasses": ""

    }
}}

<div class="activity-block designer" style="{{#prostyle}} {{{prostyle}}} {{/prostyle}}">
    {{{movehtml}}}
    <div class="card card-list {{colorclass}}" data-action="go-to-url" data-url="{{cmurl}}" >
        <div class="card-body">
            <div class="activity-background-style" style="{{#modulebackgroundstyle}} {{modulebackgroundstyle}} {{/modulebackgroundstyle}}">
            </div>
            {{#modbackoverlaycolor}}
            <div class="bg-overlay" style="{{modbackoverlaycolor}}"></div>
            {{/modbackoverlaycolor}}
            <div class="mod-indent-outer w-100">
                <div class="{{indentclasses}}"></div>
                    <div class="row">
                        <div class="col-12 col-md-7">
                            <div class="activityinstance {{modcontentclass}}">
                                {{#modiconurl}}
                                    <div class="img-element {{elementstate.icon}}">
                                        <div class="img-block">
                                            {{{modiconurl}}}
                                        </div>
                                    </div>
                                {{/modiconurl}}
                                <div class="activity-element">
                                    <div class="activity-type {{elementstate.modname}}">
                                        <p class="text-capitalize" style="{{#moduletextcolor}} {{moduletextcolor}} {{/moduletextcolor}}">{{modtype}}</p>
                                    </div>
                                    <div class="cmname-block {{elementstate.title}}">
                                        {{#cmname}}
                                            {{{cmname}}}
                                        {{/cmname}}
                                    </div>
                                </div>

                                {{#modrestricted}}
                                <div class="availability-info {{elementstate.calltoaction}}">
                                    {{{calltoactionhtml}}}
                                </div>
                                {{/modrestricted}}
                                {{{afterlink}}}
                            </div>
                            {{{beforecontent}}}
                            {{#modcontent}}
                            <div class="mod-content {{elementstate.description}}" style="{{#moduletextcolor}} {{moduletextcolor}} {{/moduletextcolor}}">
                                {{{modcontent}}}
                            </div>
                            {{/modcontent}}
                        </div>
                        <div class="col-6 col-md-3">
                            <div class="row h-100 pull-right">
                                <div class="col align-self-center">
                                    {{#modvisits}}
                                    <div class="mod-visits-block {{elementstate.visits}}">
                                        <p style="{{#moduletextcolor}} {{moduletextcolor}} {{/moduletextcolor}}">{{modvisits}}</p>
                                    </div>
                                    {{/modvisits}}
                                    {{#cmcompletionhtml}}
                                        <div class="completion-html-card {{elementstate.completionbadge}}">
                                            {{{cmcompletionhtml}}}
                                        </div>
                                    {{/cmcompletionhtml}}
                                </div>
                            </div>
                        </div>
                        <div class="col-6 col-md-2 show-on-hover">
                            {{^modrestricted}}
                            <div class="row h-100 pull-right">
                                <div class="col align-self-center">
                                    <div class="action-html-card {{elementstate.calltoaction}}">
                                        {{{calltoactionhtml}}}
                                    </div>
                                </div>
                            </div>
                            {{/modrestricted}}
                        </div>
                    </div>
            </div>
        </div>
        <div class="module-icons">
            {{#modicons}}
                <div class="actions">
                    {{{modicons}}}
                </div>
            {{/modicons}}
        </div>
    </div>
    {{{videotimeprogress}}}
</div>
